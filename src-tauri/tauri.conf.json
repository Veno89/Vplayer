{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "VPlayer",
  "version": "0.9.19",
  "identifier": "com.vplayer.dev",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "VPlayer",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "dragDropEnabled": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline'; img-src 'self' https://asset.localhost data: https://coverartarchive.org https://archive.org https://*.archive.org; connect-src 'self' https://musicbrainz.org https://coverartarchive.org https://github.com; font-src 'self' data:; object-src 'none'",
      "assetProtocol": {
        "enable": true,
        "scope": [
          "$AUDIO/**",
          "$APPDATA/**",
          "$RESOURCE/**",
          "$HOME/Music/**",
          "$HOME/Desktop/**",
          "$HOME/Downloads/**"
        ]
      }
    }
  },
  "bundle": {
    "active": true,
    "createUpdaterArtifacts": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "publisher": "VPlayer",
    "copyright": "Copyright Â© 2025 VPlayer. All rights reserved.",
    "category": "Music",
    "shortDescription": "Modern desktop music player",
    "longDescription": "VPlayer is a powerful, feature-rich desktop music player with smart playlists, equalizer, tag editing, and more."
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://github.com/Veno89/Vplayer/releases/latest/download/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDU5QkRCMzYyQTQyNTY5RjgKUldUNGFTV2tZck85V1lsWVR5WTg0MXovV2w4TE4rRGZMbnJuSC9oSlFNNk5EWjBHWWFsZjVtZmkK"
    }
  }
}