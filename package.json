{
  "name": "vplayer",
  "version": "0.1.0",
  "description": "A local desktop music player UI built with React and Electron",
  "author": "",
  "private": true,
  "scripts": {
    "dev": "vite",
    "electron:dev": "cross-env VITE_DEV_SERVER_URL=http://localhost:5173 concurrently \"npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "test": "vitest",
    "build": "vite build",
    "postbuild": "npm run pack:portable",
    "pack:portable": "npx electron-packager . VPlayer --platform=win32 --arch=x64 --out=dist/portable --overwrite --prune=true --asar=false",
    "package": "vite build && electron-builder",
    "preview": "vite preview"
  },
  "dependencies": {
    "@testing-library/react-hooks": "^8.0.1",
    "jsmediatags": "^3.9.7",
    "lucide-react": "^0.278.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-window": "^1.8.7"
  },
  "main": "electron/main.js",
  "devDependencies": {
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/react": "^14.0.0",
    "@vitejs/plugin-react": "^4.0.0",
    "autoprefixer": "^10.4.14",
    "concurrently": "^8.2.0",
    "cross-env": "^7.0.3",
    "electron": "^26.0.0",
    "electron-builder": "^24.6.0",
    "jsdom": "^22.1.0",
    "postcss": "^8.4.24",
    "tailwindcss": "^3.4.7",
    "vite": "^5.1.0",
    "vitest": "^0.34.1",
    "wait-on": "^7.0.2"
  },
  "build": {
    "appId": "com.vplayer.app",
    "productName": "VPlayer",
    "files": [
      "dist/**",
      "electron/**",
      "node_modules/**",
      "package.json"
    ],
    "directories": {
      "buildResources": "build"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true
    },
    "win": {
      "target": [
        "nsis",
        "msi"
      ]
    },
    "msi": {
      "perMachine": true
    }
  }
}
